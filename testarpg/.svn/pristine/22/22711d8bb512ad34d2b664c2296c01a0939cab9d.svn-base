module egret{
    /**
     * 主角多角色数据层
     */
    export class RoleSceneData{
        //
        private _roleDatas:Array<SceneElementDataItem>;
        public constructor(){

        }
        //
        /**
         * 重置角色数据
         */
        public resetRoleData():void{
            var roles:Array<Role> = RoleManager.getInstance().roles;
            for(var i in roles){
                (<SceneDriverVo>roles[i].data.vo).hp = (<SceneDriverVo>roles[i].data.vo).hpTotal = 10000;
            }
        }
        //
        /**
         * 获取多角色数据
         * @returns {Array<SceneElementDataItem>}
         */
        public getRoleDatas():Array<SceneElementDataItem>{
            var roles:Array<Role> = RoleManager.getInstance().roles;
            if(!this._roleDatas || this._roleDatas.length != roles.length){
                this._roleDatas = [];

                for(var i in roles){
                    this._roleDatas.push(roles[i].data);
                }
            }

            return this._roleDatas;
        }
    }
}