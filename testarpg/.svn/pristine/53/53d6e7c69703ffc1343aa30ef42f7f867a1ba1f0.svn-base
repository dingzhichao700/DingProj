    export class FightData{
        public constructor(){

        }
        //
        public damage(skillType:number,armies:Array<SceneElementDataItem>):Array<number>{
            var value:number = this.getDamageBySkillType(skillType);
            return this.addHp(armies,value);
        }
        //
        public getDamageBySkillType(skillType:number):number{
            var value:number = 0;

            switch (skillType){
                case SkillType.WARRIOR_1:
                    value = -100;
                    break;
            }

            return value;
        }
        //
        public addHp(armies:Array<SceneElementDataItem>,value:number):Array<number>{
            var array:Array<number> = [];

            for(var i in armies){
                var vo:SceneDriverVo = <SceneDriverVo>armies[i].vo;
                if(vo){
                    vo.hp += value;

                    array.push(value);
                }
            }

            return array;
        }
    }
}