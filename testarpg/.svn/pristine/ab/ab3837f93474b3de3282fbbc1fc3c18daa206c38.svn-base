module egret{
    /**
     * 战斗数据层
     */
    export class FightData{
        public constructor(){

        }
        //
        /**
         * 计算伤害数据
         * @param skillType 技能类型
         * @param armies 敌人数据
         * @returns {Object}
         */
        public damage(skillType:number,armies:Array<SceneElementDataItem>):Object{
            var damageValues:Array<DamageDataItem> = this.getDamageBySkillType(skillType,armies);
            return this.addHp(armies,damageValues);
        }
        //
        /**
         * 根据技能获取伤害值
         * @param skillType 技能类型
         * @param armies 敌人数据
         * @returns {Array<DamageDataItem>}
         */
        public getDamageBySkillType(skillType:number,armies:Array<SceneElementDataItem>):Array<DamageDataItem>{
            var damageValues:Array<DamageDataItem> = [];

            switch (skillType){
                case SkillType.WARRIOR_1:
                case SkillType.MAGE_1:
                case SkillType.BOWMAN_1:
                    for(var i  in armies){
                        var item:DamageDataItem = new DamageDataItem();
                        item.value = -500;
                        item.isCritical = Math.random() > 0.5;
                        if(item.isCritical)
                            item.value *= 2;

                        damageValues.push(item);
                    }
                    break;
            }

            return damageValues;
        }
        //
        /**
         * 增加或减少血量
         * @param armies  敌人数据
         * @param hpValues 伤害数据
         * @returns {any}
         */
        public addHp(armies:Array<SceneElementDataItem>,hpValues:Array<DamageDataItem>):Object{
            var result:any = {};
            var deadTargets:Array<SceneElementDataItem>;

            for(var i in armies){
                var vo:SceneDriverVo = <SceneDriverVo>armies[i].vo;
                if(vo){
                    vo.hp += hpValues[i].value;

                    if(vo.hp < 0){
                        hpValues[i].value -= vo.hp;

                        vo.hp = 0;

                        if(!deadTargets)
                            deadTargets = [];

                        deadTargets.push(armies[i]);
                    }
                }
            }

            result.hpValues = hpValues;
            if(deadTargets){
                result.deadTargets = deadTargets;
            }

            return result;
        }
    }
}