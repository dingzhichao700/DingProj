module egret{
    /**
     * 战斗数据层
     */
    export class FightData{
        public constructor(){

        }
        //
        /**
         * 计算伤害数据
         * @param skillType 技能类型
         * @param armies 敌人数据
         * @returns {Object}
         */
        public damage(skillType:number,armies:Array<SceneElementDataItem>):Object{
            var damageValues:Array<DamageDataItem> = this.getDamageBySkillType(skillType,armies);
            return this.addHp(armies,damageValues);
        }
        //
        /**
         * 根据技能获取伤害值
         * @param skillType 技能类型
         * @param armies 敌人数据
         * @returns {Array<DamageDataItem>}
         */
        public getDamageBySkillType(skillType:number,armies:Array<SceneElementDataItem>):Array<DamageDataItem>{
            var damageValues:Array<DamageDataItem> = [];

            switch (skillType){
                case SkillType.WARRIOR_NORMAL:
                case SkillType.MAGE_NORMAL:
                case SkillType.BOWMAN_NORMAL:
                    for(var i  in armies){
                        var item:DamageDataItem = new DamageDataItem();
                        item.value = -200;
                        item.isCritical = Math.random() > 0.5;
                        if(item.isCritical)
                            item.value *= 2;

                        damageValues.push(item);
                    }
                    break;
                case SkillType.WARRIOR_COLLIDE:
                case SkillType.MAGE_THUNDER_BACK:
                    for(var i  in armies){
                        var item:DamageDataItem = new DamageDataItem();
                        item.value = -300;
                        item.isCritical = Math.random() > 0.5;
                        if(item.isCritical)
                            item.value *= 2;

                        damageValues.push(item);
                    }
                    break;
                //无技能，或者怪物普攻
                default :
                    for(var i  in armies){
                        var item:DamageDataItem = new DamageDataItem();
                        item.value = -100;
                        item.isCritical = Math.random() > 0.5;
                        if(item.isCritical)
                            item.value *= 2;

                        damageValues.push(item);
                    }
                    break;
            }

            return damageValues;
        }
        //
        /**
         * 增加或减少血量
         * @param armies  敌人数据
         * @param damageValues 伤害数据
         * @returns {any}
         */
        public addHp(armies:Array<SceneElementDataItem>,damageValues:Array<DamageDataItem>):Object{
            var result:any = {};
            var deadTargets:Array<SceneElementDataItem>;

            for(var i in armies){
                var vo:SceneDriverVo = <SceneDriverVo>armies[i].vo;
                if(vo){
                    vo.hp += damageValues[i].value;

                    if(vo.hp < 0){
                        damageValues[i].value -= vo.hp;

                        vo.hp = 0;

                        if(!deadTargets)
                            deadTargets = [];

                        deadTargets.push(armies[i]);
                    }
                }
            }

            result.damageValues = damageValues;
            if(deadTargets){
                result.deadTargets = deadTargets;
            }

            return result;
        }
        //
        /**
         * 获取技能释放间隔时间
         * @param skillType 技能类型
         * @returns {number}
         */
        public getSkillIntervalTime(skillType:number):number{
            switch (skillType){
                case SkillType.WARRIOR_COLLIDE:
                    return 2000;
                    break;
                case SkillType.MAGE_THUNDER_BACK:
                    return 2000;
                    break;
                case SkillType.BOWMAN_CALL:
                    return 2000;
                    break;
            }

            return 1;
        }
    }
}